{
  "name": "loopback4-query",
  "version": "1.0.0",
  "description": "An enhanced query for loopback-next, which supports cascading queries through relational conditions.",
  "keywords": [
    "bleco",
    "looback",
    "loopback-extension",
    "sql",
    "builder",
    "query",
    "knex",
    "join",
    "join",
    "leftjoin",
    "innerjoin",
    "relation",
    "relations",
    "joinrelation",
    "joinrelations",
    "join-relation",
    "join-relations",
    "find",
    "findone",
    "findall",
    "all",
    "one",
    "count",
    "select",
    "filter",
    "where"
  ],
  "author": "TY <towyuan@outlook.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/betaly/loopback4-query.git"
  },
  "scripts": {
    "prerelease": "yarn && yarn build:full && cross-env CI=1 yarn run test",
    "release": "yarn prerelease && release-it",
    "build": "nb-tsc -b",
    "build:full": "yarn install && yarn run clean && yarn run build",
    "lint": "yarn run prettier:check && yarn run eslint",
    "lint:fix": "yarn run eslint:fix && yarn run prettier:fix",
    "eslint": "nb-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "yarn run eslint --fix",
    "prettier:cli": "nb-prettier \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "prettier:check": "yarn run prettier:cli --check",
    "prettier:fix": "yarn run prettier:cli --write",
    "clean": "del 'dist' 'coverage' '.nyc_output' '*.tsbuildinfo'",
    "pretest": "yarn run clean && yarn run build",
    "test": "yarn run jest",
    "test:ci": "jest --collectCoverage --coverageDirectory=\"./coverage\" --reporters=default --reporters=jest-junit --watchAll=false",
    "jest": "jest",
    "posttest": "yarn run lint"
  },
  "dependencies": {
    "@loopback/core": "^6.1.3",
    "@loopback/filter": "^5.0.6",
    "@loopback/repository": "^7.0.6",
    "debug": "^4.3.7",
    "knex": "^3.1.0",
    "tily": "^2.23.2",
    "ts-essentials": "^10.0.2"
  },
  "devDependencies": {
    "@loopback/core": "^6.1.3",
    "@loopback/filter": "^5.0.6",
    "@loopback/repository": "^7.0.6",
    "@nutol/build": "^0.2.22",
    "@nutol/eslint-config": "^0.2.16",
    "@nutol/ts-config": "^0.2.2",
    "@types/jest": "^29.5.13",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.6.1",
    "@types/temp": "^0.9.4",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-plugin": "^6.2.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "loopback-connector-postgresql": "^7.1.5",
    "loopback-connector-sqlite3s": "^3.5.0",
    "pgmock2": "^2.1.7",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "temp": "^0.9.4",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  },
  "release-it": {
    "hooks": {
      "after:bump": "yarn"
    }
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "packageManager": "yarn@3.6.3"
}
